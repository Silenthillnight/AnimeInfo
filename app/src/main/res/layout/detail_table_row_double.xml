<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:orientation="horizontal"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingBottom="@dimen/detail_activity_vertical_margin">

   <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingEnd="8dp"
      android:orientation="vertical">

      <TextView
         android:id="@+id/cell_one_header"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="start"
         android:textSize="16sp"
         android:textStyle="bold"
         tools:text="Header" />

      <TextView
         android:id="@+id/cell_one_body"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="start"
         android:paddingTop="8dp"
         android:textSize="14sp"
         tools:text="BLAH BLAH BLAH BLAH" />

   </LinearLayout>

   <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingStart="8dp"
      android:orientation="vertical">

      <TextView
         android:id="@+id/cell_two_header"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="start"
         android:textSize="16sp"
         android:textStyle="bold"
         tools:text="Header" />

      <TextView
         android:id="@+id/cell_two_body"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="start"
         android:paddingTop="8dp"
         android:textSize="14sp"
         tools:text="BLAH BLAH BLAH BLAH" />

   </LinearLayout>
</TableRow>